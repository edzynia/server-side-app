<h1>Cart</h1>

<div id='cart'>
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Course</th>
          <th>Q-ty</th>
          <th>Change</th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>{{title}}</td>
            <td>{{count}}</td>
            <td>
              <button
                class='btn btn-small purple darken-4 js-remove'
                data-id='{{id}}'
              >Delete</button>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p><strong> Total price: </strong> <span class='price'>{{price}}</span></p>

  {{else}}
    <p>Your cart is empty</p>
  {{/if}}

</div>